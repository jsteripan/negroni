<configuration>

  <configSections>
    <section name="NegroniControlFactories" type="Negroni.TemplateFramework.Configuration.ControlFactorySection, Negroni.TemplateFramework"/>
  </configSections>

  <NegroniControlFactories configSource="NegroniFramework.config"/>

  <system.web>
    <compilation debug="true" targetFramework="4.0" />
    <pages enableViewState="false" validateRequest="false"></pages>
  </system.web>
  <system.webServer>    
     <modules runAllManagedModulesForAllRequests="true"/>
  </system.webServer>
</configuration>
